<%- include('../partials/header.ejs') %>

    <main class="cart">
      <section class="carrito container">
        <h1 class="carrito__title">CARRITO DE COMPRAS</h1>

        <div class="carrito__header">
          <p class="carrito__subtitle">DETALLE DE PRODUCTO</p>
          <p class="carrito__subtitle">CANTIDAD</p>
          <p class="carrito__subtitle">TOTAL</p>
        </div>

        <ul class="carrito__list">
          <li class="carrito__item">
            <article class="cart-item">
              <div class="cart-item__content">
                <picture class="cart-item__img">
                  <img
                    src="/img/star-wars/baby-yoda-1.webp"
                    alt="Baby Yoda Blueball"
                  />
                </picture>

                <div class="cart-item__detail">
                  <h3 class="cart-item__name">BABY YODA BLUEBALL</h3>
                  <p class="cart-item__license">STAR WARS</p>
                  <p class="cart-item__price">
                    Precio unitario: $ <span class="value__item">1799.99</span>
                  </p>
                </div>
              </div>

              <div class="cart-item__cantidad">
                <input class="cart-item__quantity quantity" type="text" name="quantity" placeholder="0" />
                <div class="cart-item__button--content">
                  <input class="cart-item__button add" type="button" name="add" value="+" />
                  <input class="cart-item__button subtract" type="button" name="subtract" value="-" />
                </div>
              </div>

              <p class="cart-item__total">
                $ <span class="value__total">1799.99</span>
              </p>

              <iconify-icon
                class="cart-item__close"
                icon="zondicons:close-outline"
              ></iconify-icon>
            </article>
          </li>

          <li>
            <article class="cart-item">
              <div class="cart-item__content">
                <picture class="cart-item__img">
                  <img src="/img/pokemon/pidgeotto-1.webp" alt="Pidgeotto" />
                </picture>

                <div class="cart-item__detail">
                  <h3 class="cart-item__name">PIDGEOTTO</h3>
                  <p class="cart-item__license">POKEMON</p>
                  <p class="cart-item__price">
                    Precio unitario: $ <span class="value__item">1799.99</span>
                  </p>
                </div>
              </div>

              <div class="cart-item__cantidad">
                <input class="cart-item__quantity quantity" type="text" name="quantity" placeholder="0" />
                <div class="cart-item__button--content">
                  <input class="cart-item__button add" type="button" name="add" value="+" />
                  <input class="cart-item__button subtract" type="button" name="subtract" value="-" />
                </div>
              </div>

              <p class="cart-item__total">
                $ <span class="value__total">1799.99</span>
              </p>

              <iconify-icon
                class="cart-item__close"
                icon="zondicons:close-outline"
              ></iconify-icon>
            </article>
          </li>
        </ul>
      </section>

      <section class="resumen container">
        <h2 class="resumen__title">RESUMEN</h2>

        <article class="resumen__content">
          <div class="resumen__div">
            <p class="resumen__detail">CANTIDAD DE ELEMENTOS</p>
            <p class="resumen__value"><span class="resumen_cantidad">2</span></p>
          </div>
          <div class="resumen__div">
            <p class="resumen__detail">SUBTOTAL</p>
            <p class="resumen__value">
              $ <span class="resumen_subtotal">3599.98</span>
            </p>
          </div>
          <div class="resumen__div">
            <p class="resumen__detail">ENVIO</p>
            <p class="resumen__value">$ <span class="resumen_envio">500.00</span></p>
          </div>
          <div class="resumen__div resumen__total">
            <p class="resumen__detail">TOTAL</p>
            <p class="resumen__value">$ <span class="resumen_total">4099.98</span></p>
          </div>
        </article>

        <input class="resumen__pagar" type="button" value="IR A PAGAR" />
      </section>
    </main>

    <%- include ('../partials/footer.ejs') %>

    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="/scripts/cart.js"></script>
    <script src="/scripts/menu.js"></script>
  </body>
</html>
