<%- include('../partials/header.ejs') %>

    <main class="main__padding">
      <div class="main container">
        <!-- Aside -->
        <aside class="main-aside">
          <div class="aside-search">
            <h2 class="aside-search__text">BUSCAR</h2>
            <input type="search" name="buscar" class="aside-search__input" placeholder="ítem o categoria" />
          </div>

          <div class="aside-order">
            <h2 class="aside-order__text">ORDENAR POR</h2>
            <form action="" id="aside-order__form">
              <select name="ordenar" class="aside-order__form-select" placeholder="Mayor o menor">
                <option value=""></option>
                <option value="">Mayor a menor</option>
                <option value="">Menor a mayor</option>
                <option value="">Nuevo</option>
              </select>
            </form>
          </div>

          <div class="aside-price">
            <h2 class="aside-price__text">PRECIO</h2>
            <form action="" id="form" class="aside-price__form">
              <label for="min" class="aside-price__label">MIN</label>
              <input type="number" name="min" id="min" class="aside-price__min-max" />
              <p class="aside-price__label">-</p>
              <label for="max" class="aside-price__label">MAX</label>
              <input type="number" name="max" id="max" class="aside-price__min-max" />
            </form>
          </div>

          <div class="aside-filter">
            <h2 class="aside-filter__text">FILTRAR</h2>
            <form action="" id="filter" class="aside-filter__form">
              <input type="checkbox" name="new" id="new" />
              <label for="new" class="aside-filter__label">NUEVOS</label><br />
              <input type="checkbox" name="offers" id="offers" />
              <label for="offers" class="aside-filter__label">OFERTAS</label><br />
              <input type="checkbox" name="special" id="special" />
              <label for="special" class="aside-filter__label">EDICIÓN ESPECIAL</label><br />
              <input type="checkbox" name="favorites" id="favorites" />
              <label for="favorites" class="aside-filter__label">FAVORITOS</label>
            </form>
          </div>
        </aside>

        <!-- Funko Group Main -->
        <div class="main-funko">
          <div class="main-funko-group">
              <% items.forEach(item => { %>
              <div class="main-funko-item">
                <article class="card-item">
                  <a class="card-item__link" href="/shop/item/<%= item.product_id %>">
                    <picture class="card-item__img">
                      <span class="card-item__tag">NUEVO</span>
                      <img
                        class="card-item__img--front"
                        src="<%= item.image_front %>"
                        alt="<%= item.product_description %>"
                      />
                      <img
                        class="card-item__img--back"
                        src="<%= item.image_back %>"
                        alt="<%= item.product_description %> BOX"
                      />
                    </picture>
                    <div class="card-item__content">
                      <p class="card-item__license"><%= item.licence_name %></p>
                      <h3 class="card-item__name"><%= item.product_name %></h3>
                      <p class="card-item__price"><%= item.price %></p>
                      <p class="card-item__offer"><%= item.dues %> CUOTAS SIN INTERÉS</p>
                    </div>
                  </a>
                </article>
              </div>
            <% }) %>
          </div>


          <!-- Chevron and Pages -->
          <div class="main-funko-chevron">
            <nav class="main-funko-chevron__nav-bar">
              <ul class="main-funko-chevron__nav-bar__ul">
                <li>
                  <a href="#" class="main-funko-chevron__nav-bar__buttons" id="main-funko-chevron__nav-bar__left-chevron"
                    ><iconify-icon icon="mdi:chevron-left" class="iconify__chevron"></iconify-icon
                  ></a>
                </li>
                <li>
                  <a href="#" class="main-funko-chevron__nav-bar__buttons">1</a>
                </li>
                <li>
                  <a href="#" class="main-funko-chevron__nav-bar__buttons">...</a>
                </li>
                <li>
                  <a href="#" class="main-funko-chevron__nav-bar__buttons">7</a>
                </li>
                <li>
                  <a href="#" class="main-funko-chevron__nav-bar__buttons" id="main-funko-chevron__nav-bar__right-chevron"
                    ><iconify-icon icon="mdi:chevron-right" class="iconify__chevron"></iconify-icon
                  ></a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </main>

    <%- include ('../partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="/scripts/menu.js"></script>
  </body>
</html>
