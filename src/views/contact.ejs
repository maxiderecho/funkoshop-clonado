<%- include('./partials/header.ejs') %>

    <main>
      <section class="create container">
        <h1 class="create__title">CONTACTO</h1>

        <form class="create__form" action="" method="post">
          <div class="create__content">
            <label class="create__label" for="nombre">
              Nombre:
              <input
                class="create__input create__name"
                type="text"
                name="nombre"
                id="nombre"
                placeholder="FunkoShop"
              />
            </label>
          </div>

          <div class="create__content">
            <label class="create__label" for="nombre">
              Mail:
              <input
                class="create__input create__name"
                type="email"
                name="nombre"
                id="nombre"
                placeholder="ejemplo@funkoshop.com"
              />
            </label>
          </div>

          <div class="create__content">
            <textarea
              class="create__description"
              name="descripcion"
              id="descripcion"
              cols="50"
              rows="8"
              placeholder="Detalle de su consulta."
            ></textarea>
          </div>

          <div class="create__content">
            <input class="create__button" type="submit" value="Enviar" />
            <input class="create__button" type="reset" value="Limpiar" />
          </div>
        </form>
      </section>
    </main>

    <%- include ('./partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="/scripts/menu.js"></script>
  </body>
</html>
