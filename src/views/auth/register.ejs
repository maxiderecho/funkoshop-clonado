<%- include('../partials/header.ejs') %>

    <main>
      <section class="account">
        <h1 class="account__title">CREA TU CUENTA</h1>
        <p class="account__text">
          Completa el formulario para ser parte del mundo de los Funkos
        </p>

        <form class="account__form" action="/auth/register" method="POST" enctype="application/x-www-form-urlencoded">
          <ul class="account__list">
            <li class="account__content">
              <label class="account__label" for="nombre">Nombre:</label>
              <input
                class="account__input"
                type="text"
                name="nombre"
                id="nombre"
                placeholder="Funko"
                required
              />
            </li>

            <li class="account__content">
              <label class="account__label" for="apellido">Apellido:</label>
              <input
                class="account__input"
                type="text"
                name="apellido"
                id="apellido"
                placeholder="Shop"
                required
              />
            </li>

            <li class="account__content">
              <label class="account__label" for="email">Email:</label>
              <input
                class="account__input"
                type="email"
                name="email"
                id="email"
                placeholder="ejemplo@funkoshop.com"
                required
              />
            </li>

            <li class="account__content">
              <label class="account__label" for="password">Contraseña:</label>
              <input
                class="account__input"
                type="password"
                name="password"
                id="password"
                placeholder="********"
                required
              />
            </li>

            <li class="account__content">
              <label class="account__label" for="password__repeat">
                Repita Contraseña:
              </label>
              <input
                class="account__input"
                type="password"
                name="password__repeat"
                id="password__repeat"
                placeholder="********"
                required
              />
            </li>
          </ul>

          <div class="account__enter">
            <input class="account__button" type="submit" value="Registrar" />

            <div class="account__checkbox">
              <input
                class="account__checkbox--input"
                type="checkbox"
                name="terminos"
                id="terminos"
                required
              />
              <label class="account__checkbox--label" for="terminos">
                Acepto
                <a class="account__link" href="#">Términos y Condiciones</a>
              </label>
            </div>
          </div>
        </form>
      </section>
    </main>

    <%- include ('../partials/footer.ejs') %>

    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="/scripts/menu.js"></script>
  </body>
</html>
