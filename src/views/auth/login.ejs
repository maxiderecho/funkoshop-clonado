<%- include('../partials/header.ejs') %>

    <main>
      <section class="account container">
        <h1 class="account__title">INGRESAR A MI CUENTA</h1>

        <form class="account__form" action="/auth/login" method="POST" enctype="application/x-www-form-urlencoded">
          <ul class="account__list">
            <li class="account__content">
              <label class="account__label" for="email">Email:</label>
              <input
                class="account__input"
                type="email"
                name="email"
                id="email"
                placeholder="ejemplo@funkoshop.com"
                
              />
            </li>

            <li class="account__content">
              <label class="account__label" for="password">Contraseña:</label>
              <input
                class="account__input"
                type="password"
                name="password"
                id="password"
                placeholder="********"
                
              />
            </li>
          </ul>

          <% if (typeof errors != 'undefined') { %>
          <ul>
            <% errors.forEach(error => { %>
            <li class="auth__error"><%= error.msg %></li>
            <% }) %>
          </ul>
          <% } %>

          <div class="account__enter">
            <input class="account__button" type="submit" value="Ingresar" />

            <div class="account__checkbox">
              <input
                class="account__checkbox--input"
                type="checkbox"
                name="recordarme"
                id="recordarme"
              />
              <label class="account__checkbox--label" for="recordarme">
                Recordarme
              </label>
            </div>
          </div>
        </form>

        <a class="account__olvidar" href="#">Olvidé mi contraseña</a>

        <a class="account__olvidar" href="/auth/register">
          ¿No tienes una cuenta? Regístrate
        </a>
      </section>
    </main>

    <%- include ('../partials/footer.ejs') %>

    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="/scripts/menu.js"></script>
  </body>
</html>
