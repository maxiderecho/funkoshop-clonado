<%- include('../partials/header.ejs') %>

    <main>
      <section class="create container">
        <h1 class="create__title">EDITAR ITEM</h1>

        <form class="create__form" action="/admin/edit/<%= product.product_id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="create__content">
            <label class="create__label" for="categoria">
              Categoría:
              <select class="create__select" name="categoria" id="categoria" required>
                <option <%= product.category_id == '1' ? 'selected' : '' %> value="1">Figuras coleccionables</option>
                <option <%= product.category_id == '2' ? 'selected' : '' %> value="2">Remeras</option>
                <option <%= product.category_id == '3' ? 'selected' : '' %> value="3">Llaveros</option>
              </select>
            </label>

            <label class="create__label" for="licencia">
              Licencia:
              <select class="create__select" name="licencia" id="licencia" required>
                <option <%= product.licence_id == '1' ? 'selected' : '' %> value="1">Pokemon</option>
                <option <%= product.licence_id == '2' ? 'selected' : '' %> value="2">Star Wars</option>
                <option <%= product.licence_id == '3' ? 'selected' : '' %> value="3">Harry Potter</option>
              </select>
            </label>
          </div>

          <div class="create__content">
            <label class="create__label" for="nombre">
              Nombre del producto:
              <input
                class="create__input create__name"
                type="text"
                name="nombre"
                id="nombre"
                value="<%= product.product_name %>"
                required
              />
            </label>
          </div>

          <div class="create__content">
            <textarea
              class="create__description"
              name="descripcion"
              id="descripcion"
              cols="50"
              rows="8"
              required
            ><%= product.product_description %></textarea>
          </div>

          <div class="create__content">
            <label class="create__label" for="sku">
              SKU:
              <input
                class="create__input create__sku"
                type="text"
                name="sku"
                id="sku"
                value="<%= product.sku %>"
                required
              />
            </label>

            <label class="create__label" for="precio">
              Precio:
              <input
                class="create__input create__price"
                type="number"
                name="precio"
                id="precio"
                value="<%= product.price %>"
                required
              />
            </label>

            <label class="create__label" for="stock">
              Stock:
              <input
                class="create__input create__stock"
                type="number"
                name="stock"
                id="stock"
                value="<%= product.stock %>"
                required
              />
            </label>
          </div>

          <div class="create__content">
            <label class="create__label" for="descuento">
              Descuento:
              <input
                class="create__input create__descuento"
                type="number"
                name="descuento"
                id="descuento"
                value="<%= product.discount %>"
              />
            </label>

            <label class="create__label" for="cuotas">
              Cuotas:
              <select class="create__select" name="cuotas" id="cuotas" >
                <option <%= product.dues == '3' ? 'selected' : '' %> value="3" selected>
                  3 Cuotas sin interés
                </option>
                <option <%= product.dues == '6' ? 'selected' : '' %> value="6">6 Cuotas sin interés</option>
                <option <%= product.dues == '12' ? 'selected' : '' %> value="12">12 Cuotas sin interés</option>
              </select>
            </label>
          </div>

          <div class="create__content">
            <label class="create__label" for="imgFront">
              Imagen Frente:
              <input class="create__image" type="file" name="imgFront" id="imgFront" />
            </label>
          </div>

          <div class="create__content">
            <label class="create__label" for="imgBack">
              Imagen Dorso:
              <input class="create__image" type="file" name="imgBack" id="imgBack" />
            </label>
          </div>

          <div class="create__content">
            <div class="create__image--img">
              <picture>
                <img src="<%= product.image_front %>" alt="<%= product.product_description %>">
              </picture>
              <p class="create__image--side">Frente</p>
            </div>

            <div class="create__image--img">
              <picture>
                <img src="<%= product.image_back %>" alt="<%= product.product_description %>">
              </picture>
              <p class="create__image--side">Dorso</p>
            </div>
          </div>

          <% if (typeof errors != 'undefined') { %>
            <ul>
              <% errors.forEach(error => { %>
              <li class="auth__error create__error"><%= error.msg %></li>
              <% }) %>
            </ul>
          <% } %>

          <div class="create__content">
            <input
              class="create__button"
              type="submit"
              value="Modificar Producto"
            />
          </div>
        </form>
      </section>
    </main>

    <%- include ('../partials/footer.ejs') %>

    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="/scripts/menu.js"></script>
    <script src="/scripts/create-edit.js"></script>
  </body>
</html>
